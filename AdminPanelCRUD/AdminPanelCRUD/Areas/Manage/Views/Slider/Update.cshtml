@{
    ViewData["Title"] = "Update";
}
@model Slider;
<div class="container">
    <h1 class="mt-5">Update the slider</h1>
    <form method="post" asp-action="update" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-3">
                <label asp-for="FirstTitle">First title</label>
                <input asp-for="FirstTitle" class="form-control" placeholder="First title">
                <span asp-validation-for="FirstTitle" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="SecondTitle">Second title</label>
                <input asp-for="SecondTitle" class="form-control" placeholder="Second title">
                <span asp-validation-for="SecondTitle" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="RedirectUrl">Redirect url</label>
                <input asp-for="RedirectUrl" class="form-control" placeholder="Redirect url">
                <span asp-validation-for="RedirectUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="RedirectUrlText">Redirect url text</label>
                <input asp-for="RedirectUrlText" class="form-control" placeholder="Redirect url text">
                <span asp-validation-for="RedirectUrlText" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Order">Order</label>
                <input asp-for="Order" class="form-control" type="number" inputmode="numeric" placeholder="Order">
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group col-8">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" style="height:100px" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-8">
                <label asp-for="ImgFile">Upload image</label>
                <input asp-for="ImgFile" type="file" accept="image/png,jpg,jpeg" class="form-control" placeholder="Img url">
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>