@{
    ViewData["Title"] = "Update";
}
@model Feature;
<div class="container">
    <h1 class="mt-5">Create a new feature</h1>
    <form method="post" asp-controller="feature" asp-action="update">
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Icon">Icon</label>
                <input asp-for="Icon" class="form-control" placeholder="Icon">
            </div>
            <div class="form-group col-4">
                <label asp-for="Header">Header</label>
                <input asp-for="Header" class="form-control" placeholder="Header">
            </div>
            <div class="form-group col-8">
                <label asp-for="About">About</label>
                <textarea asp-for="About" class="form-control" style="height:100px" placeholder="About"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>