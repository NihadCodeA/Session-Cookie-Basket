@model List<BrandSlider>;
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container-fluid mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Brand sliders</h1>
        <div>
            <a asp-area="manage" asp-controller="brandslider" asp-action="create" class="btn btn-success">Add brandslider</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">CRUD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BrandSlider brandslider in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        <img style="width:120px;" src="~/uploads/brandsliders/@brandslider.ImgUrl" alt="">
                    </td>

                    <td>
                        <a asp-controller="brandslider" asp-action="update" asp-route-id=@brandslider.Id class="btn btn-info">Update</a>
                        <a asp-controller="brandslider" asp-action="delete" asp-route-id=@brandslider.Id class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>